nav {
  font-size: 0;
  box-shadow: 0 1px 1px 0 rgba(0, 0, 0, .2);
  background-color: #fff;
  > a {
    display: inline-block;
    width: 100px;
    padding: 10px 0;
    color: #333;
    text-decoration: none;
    text-align: center;
    font-size: 14px;
    &.selected,
    &:hover {
      color: #20A0FF;
      background-color: #f4f4f4;
    }
  }
}
